{
  "name": "php-ci",
	"description": "Exemplo de integração contínua com PHP, PHPUnit, Travis CI, Coveralls e Heroku",
  "license": "MIT",
  "authors": [
    {
      "name": "matheuspiment",
      "homepage": "https://matheuspiment.github.io/"
    }
  ],
  "require": {
		"php": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2.2"
  },
	"autoload": {
    "psr-4": {
        "App\\": "App"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
